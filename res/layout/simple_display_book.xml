<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_display_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/single_time_node_view_layout_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="name" >
    </TextView>

    <TextView
        android:id="@+id/single_time_node_view_layout_author"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="author" />

    <ImageView
        android:id="@+id/single_time_node_view_layout_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/favorite_not" >
    </ImageView>

</LinearLayout>